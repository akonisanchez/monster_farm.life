<!DOCTYPE html>
<html>
<head>
  <title>Monster Trainer</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application' %>
  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
</head>
<body>
  <div class="game-container">
    <div class="game-boy">
      <div class="game-screen">
        <% if flash[:notice] %>
          <div class="notice pixel-box"><%= flash[:notice] %></div>
        <% end %>
        <% if flash[:alert] %>
            <div class="notice alert pixel-box"><%= flash[:alert] %></div>
        <% end %>
        
        <div class="monster-display">
          <h1 class="game-title">MonsterFarm.Life</h1>
          <div class="monster-sprite">üê≤</div>
          
          <div class="stats-box pixel-box">
            <div class="stat-group">
            <div class="stat-line">
            <span class="stat-label">PWR</span>
            <div class="stat-bar-container">
              <div class="stat-bar">
                <div class="stat-fill power-fill" style="width: <%= (@monster.power.to_f / Monster::MAX_STAT * 100).to_s %>%;"></div>
              </div>
              <span class="stat-value"><%= @monster.power.to_s.rjust(3, '0') %></span>
            </div>
          </div>
          
          <div class="stat-line">
            <span class="stat-label">SPD</span>
            <div class="stat-bar-container">
              <div class="stat-bar">
                <div class="stat-fill speed-fill" style="width: <%= (@monster.speed.to_f / Monster::MAX_STAT * 100).to_s %>%;"></div>
              </div>
              <span class="stat-value"><%= @monster.speed.to_s.rjust(3, '0') %></span>
            </div>
          </div>
          
          <div class="stat-line">
            <span class="stat-label">DEF</span>
            <div class="stat-bar-container">
              <div class="stat-bar">
                <div class="stat-fill defense-fill" style="width: <%= (@monster.defense.to_f / Monster::MAX_STAT * 100).to_s %>%;"></div>
              </div>
              <span class="stat-value"><%= @monster.defense.to_s.rjust(3, '0') %></span>
            </div>
          </div>
          
          <div class="stat-line">
            <span class="stat-label">HP</span>
            <div class="stat-bar-container">
              <div class="stat-bar">
                <div class="stat-fill health-fill" style="width: <%= (@monster.health.to_f / Monster::MAX_STAT * 100).to_s %>%;"></div>
              </div>
              <span class="stat-value"><%= @monster.health.to_s.rjust(3, '0') %></span>
            </div>
          </div>
          
          <div class="stat-line">
            <span class="stat-label">TIRED</span>
            <div class="stat-bar-container">
              <div class="stat-bar">
                <div class="stat-fill" style="width: <%= (@monster.tiredness.to_f / Monster::MAX_TIREDNESS * 100).to_s %>%;"></div>
              </div>
              <span class="stat-value"><%= @monster.tiredness %>/10</span>
            </div>
          </div>
            </div>
          </div>
          
          <div class="menu pixel-box">
            <div class="menu-options">
                <%= button_to "üèãÔ∏è SLED PULL", train_path(drill: "sled_pull"), class: "menu-button" %>
                <%= button_to "üõ°Ô∏è PARRY", train_path(drill: "parry"), class: "menu-button" %>
                <%= button_to "üßò MEDITATE", train_path(drill: "meditate"), class: "menu-button" %>
                <%= button_to "üèÉ 200M DASH", train_path(drill: "dash"), class: "menu-button" %>
                <%= button_to "üí§ REST", rest_path, class: "menu-button rest" %>
                <%= button_to "üîÑ RESET", reset_path, class: "menu-button reset" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>